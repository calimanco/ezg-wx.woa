.index-item {
  background-color: #ffffff;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  position: relative;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx; }
  .index-item.active {
    background-color: #ececec; }
  .index-item-icon {
    width: 110rpx;
    height: 110rpx;
    position: relative;
    overflow: visible; }
    .index-item-icon.noNumber:after {
      display: none; }
    .index-item-icon:after {
      content: attr(data-count);
      position: absolute;
      width: 50rpx;
      height: 50rpx;
      line-height: 55rpx;
      border-radius: 50%;
      right: -10rpx;
      top: 0;
      background-color: #ff3333;
      color: #ffffff;
      text-align: center; }
  .index-item-title {
    padding-left: 30rpx;
    color: #000000;
    font-size: 34rpx; }
